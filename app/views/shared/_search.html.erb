<%= form_with url: search_books_path, local: true, method: :get, class: 'book-search_container' do |f| %>
  <%= f.text_field :keyword, placeholder: 'タイトル、著者名', class: 'book-search_input' %>
  <%= f.button type: "submit", class: "book-search_btn" do %>
    <i class="fas fa-search fa-lg"></i>
  <% end %>
<% end %>
