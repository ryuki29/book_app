<div class="container-fulid">
  <div class="timeline card-group card-columns">
    <div class="card review-index_item">
      <div class="review-index_content board-background-img">
        <div class="review-index_head">

          <div class="col review-index_head_user">
            <%# -----トプ画----- %>
            <div class="review-index_user_icon i">
              <%= render partial: "shared/user-image", locals: {attr: board} %>
            </div>
            <%# -----ユーザー名----- %>
            <div class="review-index_user_name">
              <%= board.user.username %>
            </div>
          </div>

          <div class="col review-index_head_img board-background-img">
            <%= image_tag board.image if board.image.attached? %>
          </div>

        </div>

        <%# -----レビュー内容----- %>
        <%= link_to board_path(board.id), class:"review-index_show" do %>
          <div class="review-index_inner_content">
            <%# -----ヒトコト----- %>
            <h2 class="review-index_title">
              <%= board.title %>
            </h2>
            <%# -----感想----- %>
            <div class="review-index_txt">
              <p><%= board.description %></p>
            </div>
          <% end %>

          <div class="board-index_bottom">
            <%# -----削除ボタン----- %>
            <% if user_signed_in? && current_user.id == board.user_id %>
              <div class="board-index_del">
                <%= link_to board_path(board.id), method: :delete, class: "review-index_del_btn", data: { confirm: '本当に削除しますか' } do %>
                  <i class="far fa-trash-alt fa-2x"></i>
                <% end %>
              </div>
            <% else %>
              <div></div>
            <% end %>

            <div class="board-index_type"><%= t("boards.#{board.board_type}") %></div>

            <%# -----コメント数----- %>
            <div class="board-index_comment" id="like_<%= board.id %>">
              <i class="far fa-comment fa-2x"></i> <span class="board-comments-count"><%= board.comments.length %></span>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
