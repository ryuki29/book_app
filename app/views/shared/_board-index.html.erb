<div class="review-blank"></div>
  <div class="reviews-index container-fluid">
    <div class="row">

      <div class="blank col-md-2">
      </div>

      <div class="review-index col-md-8">

      <div class="boards-form">
        <div class="boards-new d-flex mb-3">
          <i class="fas fa-pen fa-lg mt-2"></i> <h4>作成</h4>
          <% if user_signed_in? %>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#new_boardModal">
              新しく作る
            </button>
          <% else %>
            <%= link_to new_user_registration_path, class:"btn btn-primary" do %>
              新しく作る
            <% end %>
          <% end %>
        </div>

        <div class="board-search d-flex">
          <i class="fas fa-search fa-lg mt-2"></i> <h4 class="board-search_label">検索</h4>
          <%= form_with url: boards_searches_path, local: true, method: :get, class: 'board-search_container' do |f| %>
            <%= f.text_field :keyword, placeholder: 'キーワード', class: 'board-search_input' %>
            <%= f.submit class: "board-search_btn" %>
          <% end %>
        </div>
      </div>

      <% @boards.each do |board| %>
        <%= render partial: "boards/board", locals: { board: board } %>
      <% end %>

      <%= paginate @boards %>

      </div>

    <div class="ranking-book col-md-2">
    </div>

  </div>
</div>

<%= render "shared/new-board-modal" %>
