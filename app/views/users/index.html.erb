<div class="container">
  <div class="mt-4">
  <h4 class="notification-title text-center">ユーザー一覧</h4>
  <%= form_with url: users_path, method: :get, local: true do |f| %>
    <div class="text-center">
      <%= f.text_field :keyword, placeholder: "ユーザーを検索する" %>
      <%= f.submit :"検索"%>
    </div>
  <% end %>
    <% if @users.present? %>
      <%= render @users %>
    <% else %>
      <p class="text-center mt-5">該当のユーザーはいません</p>
    <% end %>
  </div>
</div>
