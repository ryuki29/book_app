<div class="contents row">
  <div class="container">
    <h2>アカウント作成</h2>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :username, placeholder: 'ユーザーネーム', autofocus: true%>
  </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, placeholder: 'メールアドレス' %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, placeholder: 'パスワード' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, placeholder: 'パスワード確認' %>
      </div>

      <div class="actions">
        <%= f.submit "登録する", class: 'btn btn-paimary' %>
      </div>
    <% end %>
    <%= link_to 'Twitterで登録', user_twitter_omniauth_authorize_path, id: 'signup-twitter', method: :post %>
  </div>
</div>